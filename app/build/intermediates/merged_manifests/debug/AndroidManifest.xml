<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tcp_ip"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@drawable/applogo"
        android:label="BPQView"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.Tcpip" >
        <activity
            android:name="com.example.tcp_ip.abousus"
            android:label="@string/title_activity_abousus"
            android:parentActivityName="com.example.tcp_ip.Menu"
            android:theme="@style/Theme.Tcpip.NoActionBar" />
        <activity
            android:name="com.example.tcp_ip.Logging"
            android:parentActivityName="com.example.tcp_ip.Menu" />
        <activity
            android:name="com.example.tcp_ip.Device_Info"
            android:parentActivityName="com.example.tcp_ip.Menu" />
        <activity
            android:name="com.example.tcp_ip.settings"
            android:parentActivityName="com.example.tcp_ip.Menu"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.tcp_ip.testtest" />
        <activity
            android:name="com.example.tcp_ip.chart"
            android:parentActivityName="com.example.tcp_ip.Menu"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.tcp_ip.Menu" />
        <activity
            android:name="com.example.tcp_ip.Data"
            android:parentActivityName="com.example.tcp_ip.Menu"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.tcp_ip.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/SplashscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.tcp_ip.MainActivity" />
    </application>

</manifest>